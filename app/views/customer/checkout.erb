<h1>User Personal Information</h1>
<form method="POST" action='/customer/checkout'>
    
  <input type="hidden" name="service_id" value="<%= @services_id %>">

  <label>Name:</label>
  <input type="text" name="name">
  
  <label>Email:</label>
  <input type="text" name="email" value="<%= @user && @user.email %>">

  <label>Password:</label>
  <input type="text" name="password" value="<%= @user && @user.password %>">

  <label>Password Confirmation:</label>
  <input type="text" name="password_confirmation">

  <p><input type="submit" value="Go!"></p>

</form>