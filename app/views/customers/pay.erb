<h1>Your Order Summary</h1>
<hr></hr>
<% @services.each do |service| %>
<div class = "service">
  <h3>
    <li><%= service.name %> </li>
    <li><%= service.socks_per_month %></li>
    <li><%= service.cost %> </li>
  </h3>
</li>
</div>
<% @servicecost = service.name.cost %>
<p> Item cost: <%= @servicecost %> </p>
<p>  Total cost: <%= @servicecost * 0.15 %> </p>
</p>
<% end %>


